include ../../mixins/main_mixins.pug

block append scripts
    +script("../src/pug/components/form_elem/search_room.js", "module") 

.search-room__wrapper
    h2 Найдём номера под ваши пожелания
    .form-elem__date-dropdown
        .form_elem__two-inputs-box
            +doubleInput('прибытие', false, "input__drop-text", 'ДД.ММ.ГГГГ', "expand_more", "input__drop-first input__drop-first-search")
            +doubleInput('выезд', false, "input__drop-numb", 'ДД.ММ.ГГГГ', "expand_more", "input__drop-last input__drop-last-search")
    .form-elem__dropdown-wrapper.form-elem__dropdown-wrapper-guest
        +input('гости', "", false, 'Сколько гостей', "expand_more", "active", true)
        .form-elem__dropdown.form-elem__dropdown-guests
            +dropdown_extend_unit('взрослые', "adult", "0")
            +dropdown_extend_unit('дети', "children", "0")
            +dropdown_extend_unit('младенцы', "baby", "0")
            +input-action
    button(class = "button__fill button__pay") подобрать номер
        i(class="material-icons md-24 ") arrow_forward
